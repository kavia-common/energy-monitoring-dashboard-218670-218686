# Required for JWT signing/verification (set a strong random secret)
JWT_SECRET=change-me

# Optional: override token expiry (minutes)
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=120

# Optional: provide DB DSN directly (preferred in production)
# Example: postgresql://user:pass@host:port/dbname
DATABASE_URL=

# Optional: override where backend reads db_connection.txt from the database container
DB_CONNECTION_TXT=
